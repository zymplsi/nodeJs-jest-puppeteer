{
   "compilerOptions": {
     "baseUrl": ".",
     "paths": { "*": ["types/*"] },
      "lib": [
         "dom",
         "es6",
         "es7"
      ],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   }
}